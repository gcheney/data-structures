package arrays;

import static org.junit.Assert.*;

import org.junit.Test;

public class ArrayListTest {

	@Test
	public void addingElementsReturnsCorrectElement() {
		List<Integer> list = new ArrayList<Integer>(10);
		
        list.add(new Integer(2));
        list.add(new Integer(5));
        list.add(new Integer(1));
        list.add(new Integer(23));
        list.add(new Integer(14));
        
        assertEquals("List contains 2", true, list.contains(2));
        assertEquals("List contains 6", true, list.contains(6));
        assertEquals("Index of 14 is 4", 4, list.indexOf(14));
	}
	
	@Test
	public void gettingElementsReturnsCorrectElement() {
		List<Integer> list = new ArrayList<Integer>(10);
		
        list.add(new Integer(2));
        list.add(new Integer(5));
        list.add(new Integer(1));
        
        assertEquals("Get element 1 returns 5", 5, list.get(1));
        assertEquals("Get element 0 returns 2", 2, list.get(0));
	}

}
